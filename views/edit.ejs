<%- include('partials/header.ejs') %>

<div class="container">
	<h1 style="text-align : center">Edit <%= campground.name %></h1>

	<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="obj[name]" value="<%=campground.name%>">
			
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="obj[image]" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="obj[description]" value="<%=campground.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit</button>		
				</div>
				<a href="/campgrounds">Go Back</a>
			</form>
	</div>
	
</div>
<%- include('partials/footer.ejs') %>
